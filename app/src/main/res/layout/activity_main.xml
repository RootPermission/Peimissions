<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oms.mmc.permissions.MainActivity">

    <Button
        android:onClick="getPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一次申请一个权限"/>
    <Button
        android:onClick="getPermissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一次申请多个权限"/>
    <Button
        android:onClick="getPermissionWithTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一次申请一个权限（使用拒绝弹框）"/>
    <Button
        android:onClick="getPermissionsWithTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一次申请多个权限（使用拒绝弹框）"/>
    <Button
        android:onClick="callPhone"
        android:text="拨打电话"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>